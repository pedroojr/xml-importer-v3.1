# Build (Vite)
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# Se precisar apontar a API em build, passe: --build-arg VITE_API_BASE=https://api.xml.lojasrealce.shop
ARG VITE_API_BASE
ENV VITE_API_BASE=$VITE_API_BASE
RUN npm run build

# Runtime (Nginx)
FROM nginx:alpine

# Labels para GitHub Container Registry
LABEL org.opencontainers.image.source=https://github.com/pedroojr/xml-importer-v3.1
LABEL org.opencontainers.image.description="XML Importer Web - React frontend"
LABEL org.opencontainers.image.licenses=MIT

WORKDIR /
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
RUN apk add --no-cache curl
EXPOSE 80
HEALTHCHECK --interval=15s --timeout=5s --retries=5 CMD curl -fsS http://localhost || exit 1
